mixin footer
  .footer
    .copyright Copyright Â© 2024. All Right Reserved.
    .nav
      a.active(href="./index.html") Home
      a(href="./BLOG.html") Blog
      a(href="./_shop.html") Shop
      a(href="./_about.html") About

doctype html
html
  head
    style.
      body {
        margin: 0;
        padding: 0;
        font-family: Arial, sans-serif;
      }
      .footer {
        color: #BEBEBE;
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 45px 200px;
        bottom: 0;
        width: 100%;
        left: 0;
      }
      .footer .copyright {
        font-size: 14px;
      }
      .footer .nav {
        display: flex;
        gap: 20px;
      }
      .footer .nav a {
        color: #254B62;
        text-decoration: none;
        font-size: 16px;
      }
      .footer .nav a.active{
        color: #ffffff;
        text-decoration: none;
        font-size: 16px;
      }

      .footer .nav a:hover {
        color: white;
        text-decoration: none;
        font-size: 16px;
      }
      
  body
    +footer