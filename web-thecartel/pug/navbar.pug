    link(href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet")
    link(rel="stylesheet" href="style.css")
    script(src="https://kit.fontawesome.com/a076d05399.js")
    style.
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        font-family: 'Poppins', sans-serif;
        background-color: #f5f5f5;
      }

      nav {
        color: white ;
        width: 100%;
        padding: 35px 110px;
        position: fixed;
        top: 0;
        left: 0;
        z-index: 1000;
        display: flex;
        justify-content: space-between;
        align-items: center;
      }

      .logo {
        font-size: 24px;
        font-weight: 600;
      }

      .nav-links {
        list-style-type: none;
        display: flex;
        gap: 10px;
      }

      .nav-links li {
        position: relative;
        display: inline-block;
      }

      .nav-links a {
        color: white;
        text-decoration: none;
        font-weight: 500;
        padding: 10px 15px;
        transition: background-color 0.3s ease;
      }

      .nav-links a:hover {
        background-color: #555;
        border-radius: 5px;
      }

      .dropdown {
        display: none;
        position: absolute;
        background-color: rgba(255, 255, 255, 0.14);
        list-style: none;
        padding: 10px 0;
        border-radius: 5px;
        z-index: 1000;
        top: 100%;
        left: 0;
      }

      .nav-links li:hover .dropdown {
        display: block;
      }

      .dropdown li {
        padding: 5px 15px;
      }

      .dropdown li a {
        padding: 5px 15px;
        white-space: nowrap;
      }

      .icons {
        display: flex;
        gap: 15px;
      }

      .icon {
        color: white;
        font-size: 18px;
        text-decoration: none;
        transition: color 0.3s ease;
      }

      .icon:hover {
        color: #999;
      }
